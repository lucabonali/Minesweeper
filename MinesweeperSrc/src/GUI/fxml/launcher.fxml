<AnchorPane prefHeight="280.0" prefWidth="474.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controllers.LauncherController">
   <children>
      <Pane prefHeight="282.0" prefWidth="500.0">
         <children>
            <ImageView fitHeight="300.0" fitWidth="500.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/sfondogriglia.jpg" />
               </image>
            </ImageView>
            <Label fx:id="titleLabel" layoutX="145.0" layoutY="45.0" text="MINESWEEPER" textFill="WHITE">
               <font>
                  <Font name="AR JULIAN" size="31.0" />
               </font>
            </Label>
            <Button id="btnPlayOffline" fx:id="startButton" layoutX="95.0" layoutY="182.0" mnemonicParsing="false" onAction="#startGame" prefHeight="37.0" prefWidth="100.0" stylesheets="@../styleSheet/graphicStyle.css" />
            <ToolBar id="launcherToolbar" layoutY="1.0" prefHeight="35.0" prefWidth="500.0" stylesheets="@../styleSheet/graphicStyle.css">
              <items>
                  <Pane prefHeight="25.0" prefWidth="457.0" />
                  <HBox prefHeight="25.0" prefWidth="25.0">
                     <children>
                      <Button id="buttonExit" fx:id="buttonExit" graphicTextGap="0.0" mnemonicParsing="false" onAction="#closeWindow" onMouseEntered="#closeMouseEntered" prefHeight="20.0" prefWidth="24.0" stylesheets="@../styleSheet/graphicStyle.css">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Button>
                     </children>
                  </HBox>
              </items>
            </ToolBar>
         </children>
      </Pane>
   </children>
</AnchorPane>
